<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        app:tabTextAppearance="@style/TextAppearance.Design.Tab.Custom"
        android:id="@+id/ctl_title"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/white"
        tl:tabIndicatorHeight="3dp"
        tl:tl_iconVisible="false"
        tl:tl_indicator_width="10dp"
        tl:tl_textBold="SELECT"
        tl:tl_textSelectColor="@color/text_color"
        tl:tl_textUnselectColor="@color/text_color"
        tl:tl_textsize="16sp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>