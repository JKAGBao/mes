<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/upback"
    android:orientation="vertical"
    tools:context="project.bridgetek.com.applib.main.fragment.workbench.DeviceDetailsFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/rl_cont"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/theme"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ic_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:src="@drawable/ic_back" />

        <project.bridgetek.com.bridgelib.MyControl.BoldTextView
            android:id="@+id/line_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="设备详情"
            android:textColor="@color/title_name"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!--<LinearLayout-->
        <!--android:id="@+id/ll_archives"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center"-->
        <!--android:layout_marginRight="12dp"-->
        <!--android:gravity="center"-->
        <!--android:orientation="vertical">-->

        <!--<ImageView-->
        <!--android:layout_width="22dp"-->
        <!--android:layout_height="22dp"-->
        <!--android:src="@mipmap/bt_archives" />-->

        <!--<project.bridgetek.com.bridgelib.MyControl.RegularTextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="2dp"-->
        <!--android:text="@string/delegate_more_device_text"-->
        <!--android:textColor="@color/title_name"-->
        <!--android:textSize="9sp" />-->
        <!--</LinearLayout>-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="15dp">

        <ImageView
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:background="@mipmap/webwxgetmsgimg" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <project.bridgetek.com.bridgelib.MyControl.DeployableMediumTextView
                android:id="@+id/tv_device_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/check_label_tv_text"
                android:textColor="@color/text_color"
                android:textSize="16sp" />

            <project.bridgetek.com.bridgelib.MyControl.DeployableMediumTextView
                android:id="@+id/tv_device_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="@string/delegate_exception_tv_devicecode_text"
                android:textColor="@color/work_title"
                android:textSize="14sp" />

            <project.bridgetek.com.bridgelib.MyControl.DeployableMediumTextView
                android:id="@+id/tv_pl_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="@string/device_details_tv_pl_text"
                android:textColor="@color/work_title"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_marginTop="9dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <project.bridgetek.com.bridgelib.MyControl.DeployableMediumTextView
                    android:id="@+id/tv_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_company"
                    android:minWidth="117dp"
                    android:padding="5dp"
                    android:text="@string/delegate_exception_tv_company_text"
                    android:textColor="@color/work_title"
                    android:textSize="14sp" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <project.bridgetek.com.bridgelib.MyControl.RegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/device_details_tv_state_text"
                    android:textColor="@color/work_title"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_round_textview_green" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_collect"
            android:layout_width="26dp"
            android:layout_height="25dp"
            android:padding="5dp"
            android:src="@mipmap/ic_nocollect" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_trend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:padding="12dp">

                <project.bridgetek.com.bridgelib.MyControl.MediumTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="实时监测"
                    android:textColor="@color/text_color"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:background="@mipmap/ic_trend" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/upback"
                android:paddingLeft="12dp"
                android:paddingRight="12dp" />

            <project.bridgetek.com.bridgelib.MyControl.DG_ListView
                android:id="@+id/lv_point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:divider="@null"
                android:paddingBottom="10dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@color/upback"
                android:orientation="vertical">

                <android.support.design.widget.TabLayout
                    android:id="@+id/tab_theme"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    app:tabTextAppearance="@style/TextAppearance.Design.Tab.Custom"
                    tl:tabIndicatorHeight="2dp"
                    tl:tl_iconVisible="false"
                    tl:tl_indicator_width="10dp"
                    tl:tl_textBold="SELECT"
                    tl:tl_textsize="14sp" />

                <project.bridgetek.com.bridgelib.MyControl.MyViewPager
                    android:id="@+id/vp_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
