<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:background="@color/upback"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/layout_osc1"
        android:background="@color/upback"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/layout_osc2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="15.0sp"
                android:textColor="#ff000000"
                android:gravity="center"
                android:background="#ffb1adac"
                android:paddingTop="2.5dip"
                android:paddingBottom="2.5dip"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text=""
                android:singleLine="true"
                android:layout_weight="1.0" />

            <TextView
                android:textSize="15.0sp"
                android:textColor="#ff000000"
                android:gravity="center"
                android:background="#ffb1adac"
                android:paddingTop="2.5dip"
                android:paddingBottom="2.5dip"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text="波形"
                android:singleLine="true"
                android:layout_weight="4.0" />

            <TextView
                android:textSize="15.0sp"
                android:textColor="#ff000000"
                android:gravity="center"
                android:id="@+id/tv_Vunit"
                android:background="#ffb1adac"
                android:paddingTop="2.5dip"
                android:paddingBottom="2.5dip"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text="m/s^2"
                android:singleLine="true"
                android:layout_weight="1.0" />
        </LinearLayout>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chartOscW"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="6.0dip"
            android:layout_weight="1.0" />

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/layout_osc4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="15.0sp"
                android:textColor="#ff000000"
                android:gravity="center"
                android:background="#ffb1adac"
                android:paddingTop="2.5dip"
                android:paddingBottom="2.5dip"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text=""
                android:singleLine="true"
                android:layout_weight="1.0" />

            <TextView
                android:textSize="15.0sp"
                android:textColor="#ff000000"
                android:gravity="center"
                android:background="#ffb1adac"
                android:paddingTop="2.5dip"
                android:paddingBottom="2.5dip"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text="频谱"
                android:singleLine="true"
                android:layout_weight="4.0" />

            <TextView
                android:textSize="15.0sp"
                android:textColor="#ff000000"
                android:gravity="center"
                android:background="#ffb1adac"
                android:paddingTop="2.5dip"
                android:paddingBottom="2.5dip"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text=""
                android:singleLine="true"
                android:layout_weight="1.0" />
        </LinearLayout>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chartOscF"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            androidlayout_marginBottom="10.0dip"
            android:layout_weight="1.0" />
    </LinearLayout>
</FrameLayout>