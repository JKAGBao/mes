<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/upback"
    android:orientation="vertical"
    tools:context="project.bridgetek.com.applib.main.fragment.workbench.DeviceSpotFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/rl_cont"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/theme">

        <ImageView
            android:id="@+id/ic_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:src="@drawable/ic_back" />

        <project.bridgetek.com.bridgelib.MyControl.BoldTextView
            android:id="@+id/line_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxEms="10"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@string/device_spot_line_name_text"
            android:textColor="@color/title_name"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="12dp">

        <LinearLayout
            android:id="@+id/ll_acceleration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <CheckBox
                android:id="@+id/cb_acceleration"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/checkout_circular"
                android:button="@null"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false" />

            <project.bridgetek.com.bridgelib.MyControl.RegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="@string/test_vibration_rb_signal1_text"
                android:textColor="@color/work_title"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <CheckBox
                android:id="@+id/cb_speed"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/checkout_circular"
                android:button="@null"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false" />

            <project.bridgetek.com.bridgelib.MyControl.RegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="@string/test_vibration_rb_signal2_text"
                android:textColor="@color/work_title"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_temperature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <CheckBox
                android:id="@+id/cb_temperature"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/checkout_circular"
                android:button="@null"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false" />

            <project.bridgetek.com.bridgelib.MyControl.RegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="@string/test_vibration_rb_signal3_text"
                android:textColor="@color/work_title"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="5dp">

        <project.bridgetek.com.bridgelib.MyControl.RegularTextView
            android:id="@+id/tv_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_textview_time"
            android:drawableEnd="@mipmap/ic_time"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:hint="@string/stock_alarm_tv_start_time_text"
            android:minWidth="85dp"
            android:padding="6dp"
            android:textColor="@color/work_title"
            android:textSize="12sp" />

        <project.bridgetek.com.bridgelib.MyControl.RegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/stock_alarm_totime_text"
            android:textColor="@color/work_title"
            android:textSize="14sp" />

        <project.bridgetek.com.bridgelib.MyControl.RegularTextView
            android:id="@+id/tv_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_textview_time"
            android:drawableEnd="@mipmap/ic_time"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:hint="@string/stock_alarm_tv_end_time_text"
            android:minWidth="85dp"
            android:padding="6dp"
            android:textColor="@color/work_title"
            android:textSize="12sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"></View>

        <project.bridgetek.com.bridgelib.MyControl.RegularTextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/theme"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/more_device_et_search_text"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <project.bridgetek.com.bridgelib.MyControl.HistoryListView
        android:id="@+id/lv_chart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:divider="@null" />

    <LinearLayout
        android:id="@+id/ll_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/exception_company"
        android:paddingBottom="6dp"
        android:paddingTop="6dp">

        <project.bridgetek.com.bridgelib.MyControl.MediumTextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/device_spot_tv_name_text"
            android:textColor="@color/text_color"
            android:textSize="14sp" />

        <project.bridgetek.com.bridgelib.MyControl.MediumTextView
            android:id="@+id/tv_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/stock_alarm_unit_text"
            android:textColor="@color/text_color"
            android:textSize="14sp" />

        <project.bridgetek.com.bridgelib.MyControl.MediumTextView
            android:id="@+id/tv_unit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/device_spot_tv_time_text"
            android:textColor="@color/text_color"
            android:textSize="14sp" />

    </LinearLayout>

    <ListView
        android:id="@+id/lv_signal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:divider="@null">

    </ListView>
</LinearLayout>
