<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/dialog_ll_count"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_taskName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/upcom_watch_dialog_skip_text"
            android:textColor="@color/work_title"
            android:textSize="16sp" />

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/bt_preservation"
                android:layout_width="100dp"
                android:layout_height="42dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/dialog_bt_preservation"
                android:includeFontPadding="false"
                android:text="@string/test_temporary_bt_preservation_text"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <Button
                android:id="@+id/bt_complete"
                android:layout_width="100dp"
                android:layout_height="42dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/dialog_bt_preservation"
                android:includeFontPadding="false"
                android:text="@string/upcom_abnormal_tv_cancel_text"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>