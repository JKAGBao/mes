<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/upback"
    android:orientation="vertical"
    tools:context="project.bridgetek.com.applib.main.activity.MeasureActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/theme"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ic_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:paddingBottom="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/line_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/task_upcoming_tv_workname_text"
            android:textColor="@color/title_name"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Switch
            android:switchMinWidth="46dp"
            android:id="@+id/st_derail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="12dp"
            android:checked="true"
            android:thumb="@drawable/switch_custom_thumb_selector"
            android:track="@drawable/switch_custom_track_selector" />
    </LinearLayout>

    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_about"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"></LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_chart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/tv_peak_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/test_vibration_tv_peak_text"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_virtual_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/test_vibration_tv_valid_text"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_peak_peak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/test_vibra_tv_peakvalue_text"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_count"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/upback"
                android:orientation="vertical">

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:background="@color/white">

                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/tv_equipment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="12dp"
                        android:includeFontPadding="false"
                        android:text="@string/upcom_meter_tv_equipment_text"
                        android:textColor="@color/work_title"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/img_state"
                        android:src="@drawable/ic_control"
                        android:layout_marginRight="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:background="@color/white">

                    <TextView
                        android:paddingTop="6dp"
                        android:id="@+id/tv_inspect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:includeFontPadding="false"
                        android:text="@string/upcom_abnormal_tv_inspect_text"
                        android:textColor="@color/work_title"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:id="@+id/tv_ESTStandard"
                        android:layout_marginLeft="12dp"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_connect"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginTop="6dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="17dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="12dp"
                        android:background="@drawable/ic_sensor" />

                    <TextView
                        android:id="@+id/tv_notConnect"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:includeFontPadding="false"
                        android:text="@string/upcom_measure_tv_notconnect_text"
                        android:textColor="@color/theme"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_Connect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="14dp"
                        android:includeFontPadding="false"
                        android:text="@string/upcom_measure_tv_connect_text"
                        android:textColor="@color/theme"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="12dp"
                        android:background="@drawable/btn_right_arrow_yellow" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_name"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginTop="6dp"
                    android:background="@color/white">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="17dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="12dp"
                        android:background="@drawable/ic_sensor_green_normal" />

                    <TextView
                        android:id="@+id/tv_sensor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:includeFontPadding="false"
                        android:text="@string/excdelegate_fragment_adapter_tv_inspect_text"
                        android:textColor="@color/work_title"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="17dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="30dp"
                        android:background="@drawable/ic_signal" />

                    <TextView
                        android:id="@+id/tv_signal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:includeFontPadding="false"
                        android:text="@string/upcom_measure_tv_signal_text"
                        android:textColor="@color/work_title"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="30dp"
                        android:background="@drawable/ic_electricity" />

                    <TextView
                        android:id="@+id/tv_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:includeFontPadding="false"
                        android:text="@string/upcom_measure_tv_quantity"
                        android:textColor="@color/work_title"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="30dp"
                        android:background="@drawable/btn_common_right_arrow" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_speed"
                    android:layout_width="match_parent"
                    android:layout_height="146dp"
                    android:layout_marginTop="6dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_marginTop="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_speed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:text="@string/test_vibration_rb_signal2_text"
                                android:textColor="@color/work_title"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_marginLeft="2dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:text="@string/upcom_measure_speed_text"
                                android:textColor="@color/work_title"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/tv_speed_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:includeFontPadding="false"
                                android:text="@string/upcom_measure_tv_speed_text_text"
                                android:textColor="@color/percentage"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <EditText
                            android:inputType="numberDecimal"
                            android:background="@null"
                            android:imeOptions="actionDone"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:id="@+id/tv_speed_value"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:includeFontPadding="false"
                            android:hint="@string/upcom_measure_tv_acceleration_value_text"
                            android:textColor="@color/work_title"
                            android:textSize="28sp" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:id="@+id/tv_section1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:text="@string/upcom_measure_section_text"
                                android:textColor="@color/percentage"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_speed_section"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:text="@string/upcom_measure_tv_speed_section_text"
                                android:textColor="@color/percentage"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="20dp">

                        <Button
                            android:id="@+id/bt_speed_photo"
                            android:layout_width="74dp"
                            android:layout_height="26dp"
                            android:layout_gravity="center"
                            android:background="@color/select_bt_normal"
                            android:includeFontPadding="false"
                            android:text="@string/upcom_measure_bt_speed_text"
                            android:textColor="@color/white"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_acceleration"
                    android:layout_width="match_parent"
                    android:layout_height="146dp"
                    android:layout_marginTop="6dp"
                    android:background="@color/white">

                    <LinearLayout
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_marginTop="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_acceleration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:text="@string/test_vibration_rb_signal1_text"
                                android:textColor="@color/work_title"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_marginLeft="2dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:text="@string/upcom_measure_acceleration_text"
                                android:textColor="@color/work_title"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/tv_acceleration_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:includeFontPadding="false"
                                android:text="@string/upcom_vibra_tv_acceleration_text"
                                android:textColor="@color/percentage"
                                android:textSize="16sp" />
                        </LinearLayout>


                        <EditText
                            android:inputType="numberDecimal"
                            android:background="@null"
                            android:imeOptions="actionDone"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:id="@+id/tv_acceleration_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:hint="@string/upcom_measure_tv_acceleration_value_text"
                            android:textColor="@color/work_title"
                            android:textSize="28sp" />


                        <LinearLayout
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:id="@+id/tv_section2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:text="@string/upcom_measure_section_text"
                                android:textColor="@color/percentage"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_acceleration_section"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:includeFontPadding="false"
                                android:text="@string/upcom_measure_tv_speed_section_text"
                                android:textColor="@color/percentage"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="20dp">

                        <Button
                            android:id="@+id/bt_acceleration_photo"
                            android:layout_width="74dp"
                            android:layout_height="26dp"
                            android:layout_gravity="center"
                            android:background="@color/select_bt_normal"
                            android:includeFontPadding="false"
                            android:text="@string/upcom_measure_bt_speed_text"
                            android:textColor="@color/white"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_temprature"
                    android:layout_width="match_parent"
                    android:layout_height="146dp"
                    android:layout_marginTop="6dp"
                    android:background="@color/white">

                    <LinearLayout
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_marginTop="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_temperature"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:text="@string/test_vibration_rb_signal3_text"
                                android:textColor="@color/work_title"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_marginLeft="2dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:text="@string/upcom_measure_temperature_text"
                                android:textColor="@color/work_title"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/tv_temperature_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:includeFontPadding="false"
                                android:text="@string/upcom_vibra_tv_temperatrue_text"
                                android:textColor="@color/percentage"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <EditText
                            android:inputType="numberDecimal"
                            android:background="@null"
                            android:imeOptions="actionDone"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:id="@+id/tv_temperature_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:hint="@string/upcom_measure_tv_acceleration_value_text"
                            android:textColor="@color/work_title"
                            android:textSize="28sp" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:id="@+id/tv_section4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:text="@string/upcom_measure_section_text"
                                android:textColor="@color/percentage"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_temperature_section"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:text="@string/upcom_measure_tv_speed_section_text"
                                android:textColor="@color/percentage"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="20dp">

                        <Button
                            android:id="@+id/bt_temperature_photo"
                            android:layout_width="74dp"
                            android:layout_height="26dp"
                            android:layout_gravity="center"
                            android:background="@color/select_bt_normal"
                            android:includeFontPadding="false"
                            android:text="@string/upcom_measure_bt_temperature_text"
                            android:textColor="@color/white"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginTop="6dp"
                    android:background="@color/white">

                    <project.bridgetek.com.bridgelib.MyControl.BoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="12dp"
                        android:includeFontPadding="false"
                        android:text="报警等级："
                        android:textColor="@color/work_title"
                        android:textSize="16sp" />

                    <project.bridgetek.com.bridgelib.MyControl.BoldTextView
                        android:id="@+id/tv_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:textColor="@color/over_tips"
                        android:textSize="16sp" />
                </LinearLayout>

                <ImageView
                    android:visibility="gone"
                    android:layout_marginTop="6dp"
                    android:id="@+id/img_thermal"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:scaleType="center" />

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:includeFontPadding="false"
            android:id="@+id/tv_tips"
            android:textColor="@color/blue"
            android:textSize="14sp"
            android:text="@string/upcom_measure_tv_tips_text"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/over_tips"
            android:textSize="10sp"
            android:text="@string/upcom_measure_tips_text"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_preservation"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:background="@color/measure_bt_preservation"
                android:includeFontPadding="false"
                android:text="@string/over_undete_btcomplete_text"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <Button
                android:layout_marginLeft="1dp"
                android:id="@+id/bt_retest"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:background="@color/theme"
                android:includeFontPadding="false"
                android:text="@string/upcom_measure_bt_retest_text"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
